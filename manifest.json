{
  "manifest_version": 3,
  "name": "Link Selector",
  "version": "1.0",
  "description": "A Chrome extension to select and manage links on web pages.",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Link Selector"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}