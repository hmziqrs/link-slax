{
  "manifest_version": 3,
  "name": "Link Selector",
  "version": "1.0",
  "description": "A Chrome extension to select and manage links on web pages.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Link Selector"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-turbo": {
      "suggested_key": {
        "default": "Alt+Shift+Z",
        "mac": "Alt+Shift+Z"
      },
      "description": "Toggle Turbo Mode"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
